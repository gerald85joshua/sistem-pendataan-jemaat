@model StatusAnggotaViewModel
@{
    ViewData["Title"] = "Status Anggota";
    var num = 0;
}

<div class="container-fluid">
    <a asp-action="StatusAnggotaAddEdit" class="btn btn-neutral">+ Add</a>
    <br/><br />
    <div class="card shadow border-0 mb-7">
        <div class="table-responsive">
            <table class="table table-hover table-nowrap">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">No.</th>
                        <th scope="col">Status Anggota</th>
                        <th scope="col">Keterangan</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.List)
                    {
                        num++;
                        <tr>
                            <td> @num. </td>
                            <td> @item.Status_Anggota </td>
                            <td> @item.Keterangan </td>
                            <td>
                                <form asp-action="StatusAnggotaDelete">
                                    <a asp-action="StatusAnggotaDetail" asp-route-id="@item.Status_Anggota_ID" class="btn btn-sm btn-neutral">View</a>
                                    <a asp-action="StatusAnggotaAddEdit" asp-route-id="@item.Status_Anggota_ID" class="btn btn-sm btn-square btn-neutral text-danger-hover"> <i class="bi bi-pencil"></i> </a>
                                    <input name="id" type="hidden" value="@item.Status_Anggota_ID" />
                                    <button class="btn btn-sm btn-square btn-neutral text-danger-hover" type="submit" data-confirm="Apa Anda yakin ingin menghapus data Status Anggota ini?"> <i class="bi bi-trash"></i> </button>
                                </form>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="card-footer border-0 py-5"> <span class="text-muted text-sm">Showing @Model.DataCount records found</span> </div>
    </div>
</div>