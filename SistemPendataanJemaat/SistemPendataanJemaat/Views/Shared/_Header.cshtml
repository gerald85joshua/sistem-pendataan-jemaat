@{
    var controllerName = string.Empty;
    object controllerObj;
    var actionName = string.Empty;
    object actionObj;

    if (ViewContext.RouteData.Values.TryGetValue("controller", out controllerObj))
    {
        controllerName = controllerObj.ToString();
    }

    if (ViewContext.RouteData.Values.TryGetValue("action", out actionObj))
    {
        actionName = actionObj.ToString();
    }
}
<header class="bg-surface-primary border-bottom pt-6">
    <div class="container-fluid">
        <div class="mb-npx">
            <div class="row align-items-center">
                <div class="col-sm-6 col-12 mb-4 mb-sm-0">
                    <!-- Title -->
                    <h1 class="h2 mb-0 ls-tight">@ViewData["Title"]</h1>
                </div> <!-- Actions -->
                @*<div class="col-sm-6 col-12 text-sm-end">
                <div class="mx-n1"> <a href="#" class="btn d-inline-flex btn-sm btn-neutral border-base mx-1"> <span class=" pe-2"> <i class="bi bi-pencil"></i> </span> <span>Edit</span> </a> <a href="#" class="btn d-inline-flex btn-sm btn-primary mx-1"> <span class=" pe-2"> <i class="bi bi-plus"></i> </span> <span>Create</span> </a> </div>
            </div>*@
            </div> <!-- Nav -->
            @if (controllerName.ToLower() == "masterdata")
            {
                <ul class="nav nav-tabs mt-4 overflow-x border-0">
                    <li class="nav-item"> <a asp-action="kelompokibadahindex" asp-controller="masterdata" class="nav-link @(actionName.ToLower().StartsWith("kelompokibadah") ? "active" : "font-regular")">Kelompokibadah</a> </li>
                    <li class="nav-item">  <a asp-action="areaindex" asp-controller="masterdata" class="nav-link @(actionName.ToLower().StartsWith("area") ? "active" : "font-regular")">Area</a> </li>
                    <li class="nav-item"> <a asp-action="komselindex" asp-controller="masterdata" class="nav-link @(actionName.ToLower().StartsWith("komsel") ? "active" : "font-regular")">Komsel</a> </li>
                </ul>
            }
        </div>
    </div>
</header> 